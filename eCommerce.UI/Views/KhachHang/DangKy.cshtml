@model Core.DTO.RegisterAddRequest
@{
    Layout = "~/Views/Shared/_LayoutCustomer1.cshtml";
}
<style>
    .text-danger {
        color: red; 
    }

</style>

<section class="shopify-cart checkout-wrap">
    <div class="container">
        <form class="form-group" asp-action="DangKy" asp-controller="KhachHang" method="post" enctype="multipart/form-data">
            <div class="row d-flex flex-wrap">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-6">
                    <h2 class="section-title align-center">Đăng ký tài khoản</h2>
                    <div class="billing-details">
                        <label asp-for="@Model.MaKh"></label>
                        <input asp-for="@Model.MaKh" type="text"  class="form-control no-margin">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>

                        <label asp-for="@Model.MatKhau"></label>
                        <input asp-for="@Model.MatKhau" type="password" class="form-control no-margin">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger" ></span>

                        <label asp-for="@Model.HoTen"></label>
                        <input asp-for="@Model.HoTen" type="text" class="form-control no-margin">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>

                        <label asp-for="@Model.GioiTinh"></label>
                        <div class="col-lg-6 form-control no-margin">
                            <label>
                            <input asp-for="@Model.GioiTinh" type="radio" value="true" >Nam
                            </label>
                        </div>
                        <div class="col-lg-6 form-control no-margin">
                            <label>
                            <input asp-for="@Model.GioiTinh" type="radio" value="false">Nữ
                            </label>
                        </div>
                        <span asp-validation-for="@Model.GioiTinh" class="text-danger" ></span>

                        <label asp-for="@Model.NgaySinh"></label>
                        <input asp-for="@Model.NgaySinh" type="date" class="form-control no-margin" id="datepicker">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger" ></span>

                        <label asp-for="@Model.DiaChi"></label>
                        <input asp-for="@Model.DiaChi" type="text" class="form-control no-margin">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger" ></span>

                        <label asp-for="@Model.DienThoai"></label>
                        <input asp-for="@Model.DienThoai" type="text" class="form-control no-margin">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger" ></span>

                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" type="text" class="form-control no-margin">
                        <span asp-validation-for="@Model.Email" class="text-danger" ></span>

                        <button type="submit" name="submit" class="btn btn-dark btn-full btn-medium">Đăng ký</button>
                        
                    </div>
                </div>
                <div class="col-lg-6">
                </div>
                
            </div>
        </form>
    </div>
</section>
